<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg1" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0EA5E9;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#16A34A;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#F59E0B;stop-opacity:0.6" />
    </linearGradient>
    <pattern id="dots1" patternUnits="userSpaceOnUse" width="40" height="40">
      <circle cx="20" cy="20" r="2" fill="white" opacity="0.1"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#bg1)"/>
  <rect width="1920" height="1080" fill="url(#dots1)"/>
  
  <!-- Abstract shapes representing technology and maps -->
  <g opacity="0.3">
    <!-- Map lines -->
    <path d="M200 300 Q400 250 600 300 T1000 350" stroke="white" stroke-width="3" fill="none" opacity="0.4"/>
    <path d="M300 500 Q500 450 700 500 T1100 550" stroke="white" stroke-width="2" fill="none" opacity="0.3"/>
    
    <!-- Location pins -->
    <circle cx="400" cy="280" r="8" fill="#F59E0B"/>
    <circle cx="700" cy="320" r="6" fill="#F59E0B"/>
    <circle cx="900" cy="340" r="7" fill="#F59E0B"/>
    
    <!-- Mobile device mockup -->
    <rect x="1400" y="200" width="200" height="350" rx="20" fill="white" opacity="0.2"/>
    <rect x="1420" y="230" width="160" height="280" rx="10" fill="#0EA5E9" opacity="0.3"/>
    
    <!-- Audio waves -->
    <g transform="translate(1500, 400)">
      <circle cx="0" cy="0" r="20" fill="none" stroke="white" stroke-width="2" opacity="0.3"/>
      <circle cx="0" cy="0" r="35" fill="none" stroke="white" stroke-width="1" opacity="0.2"/>
      <circle cx="0" cy="0" r="50" fill="none" stroke="white" stroke-width="1" opacity="0.1"/>
    </g>
  </g>
  
  <!-- Overlay text area -->
  <rect x="0" y="0" width="800" height="1080" fill="url(#bg1)" opacity="0.1"/>
</svg>