<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#16A34A;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#0EA5E9;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#8B5CF6;stop-opacity:0.6" />
    </linearGradient>
    <pattern id="grid2" patternUnits="userSpaceOnUse" width="60" height="60">
      <path d="M 60 0 L 0 0 0 60" fill="none" stroke="white" stroke-width="1" opacity="0.1"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#bg2)"/>
  <rect width="1920" height="1080" fill="url(#grid2)"/>
  
  <!-- Tourism and technology elements -->
  <g opacity="0.4">
    <!-- Mountain silhouettes -->
    <path d="M0 600 L200 400 L400 500 L600 350 L800 450 L1000 300 L1200 400 L1400 250 L1600 350 L1800 200 L1920 300 L1920 1080 L0 1080 Z" fill="white" opacity="0.1"/>
    
    <!-- Interactive elements -->
    <g transform="translate(1200, 300)">
      <!-- Smartphone with map -->
      <rect x="0" y="0" width="120" height="200" rx="15" fill="white" opacity="0.3"/>
      <rect x="10" y="20" width="100" height="160" rx="8" fill="#16A34A" opacity="0.4"/>
      
      <!-- Map elements inside phone -->
      <circle cx="60" cy="80" r="4" fill="#F59E0B"/>
      <circle cx="40" cy="120" r="3" fill="#F59E0B"/>
      <circle cx="80" cy="140" r="3" fill="#F59E0B"/>
      <path d="M30 100 Q60 90 90 110" stroke="white" stroke-width="2" fill="none" opacity="0.6"/>
    </g>
    
    <!-- Sound waves and audio guide -->
    <g transform="translate(400, 400)">
      <circle cx="0" cy="0" r="15" fill="#F59E0B" opacity="0.6"/>
      <circle cx="0" cy="0" r="30" fill="none" stroke="white" stroke-width="2" opacity="0.4"/>
      <circle cx="0" cy="0" r="45" fill="none" stroke="white" stroke-width="1" opacity="0.3"/>
      <circle cx="0" cy="0" r="60" fill="none" stroke="white" stroke-width="1" opacity="0.2"/>
    </g>
    
    <!-- Tourist attractions icons -->
    <g transform="translate(800, 500)">
      <!-- Monument/building -->
      <rect x="0" y="20" width="40" height="60" fill="white" opacity="0.3"/>
      <polygon points="0,20 20,0 40,20" fill="white" opacity="0.3"/>
      <rect x="15" y="35" width="10" height="15" fill="#16A34A" opacity="0.4"/>
    </g>
    
    <!-- Connection lines -->
    <path d="M400 400 Q600 350 800 500" stroke="white" stroke-width="2" fill="none" opacity="0.3"/>
    <path d="M800 500 Q1000 450 1200 400" stroke="white" stroke-width="2" fill="none" opacity="0.3"/>
  </g>
  
  <!-- Overlay for text readability -->
  <rect x="0" y="0" width="900" height="1080" fill="url(#bg2)" opacity="0.1"/>
</svg>