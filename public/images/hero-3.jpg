<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg3" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B5CF6;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#F59E0B;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#0EA5E9;stop-opacity:0.6" />
    </linearGradient>
    <pattern id="hexagon3" patternUnits="userSpaceOnUse" width="80" height="69.28">
      <polygon points="40,0 60,23 60,46 40,69 20,46 20,23" fill="none" stroke="white" stroke-width="1" opacity="0.1"/>
    </pattern>
  </defs>
  
  <!-- Background -->
  <rect width="1920" height="1080" fill="url(#bg3)"/>
  <rect width="1920" height="1080" fill="url(#hexagon3)"/>
  
  <!-- Innovation and user experience elements -->
  <g opacity="0.4">
    <!-- Digital interface mockup -->
    <g transform="translate(1300, 200)">
      <!-- Tablet/screen -->
      <rect x="0" y="0" width="300" height="200" rx="20" fill="white" opacity="0.3"/>
      <rect x="20" y="20" width="260" height="160" rx="10" fill="#8B5CF6" opacity="0.4"/>
      
      <!-- Interface elements -->
      <rect x="40" y="40" width="80" height="8" rx="4" fill="white" opacity="0.6"/>
      <rect x="40" y="60" width="120" height="6" rx="3" fill="white" opacity="0.4"/>
      <rect x="40" y="80" width="60" height="6" rx="3" fill="white" opacity="0.4"/>
      
      <!-- Interactive buttons -->
      <circle cx="220" cy="60" r="12" fill="#F59E0B" opacity="0.7"/>
      <circle cx="250" cy="60" r="12" fill="#0EA5E9" opacity="0.7"/>
      
      <!-- Map preview -->
      <rect x="40" y="110" width="220" height="50" rx="5" fill="white" opacity="0.2"/>
      <circle cx="80" cy="130" r="3" fill="#F59E0B"/>
      <circle cx="120" cy="140" r="3" fill="#F59E0B"/>
      <circle cx="200" cy="125" r="3" fill="#F59E0B"/>
    </g>
    
    <!-- User interaction elements -->
    <g transform="translate(500, 400)">
      <!-- Hand/touch gesture -->
      <circle cx="0" cy="0" r="8" fill="white" opacity="0.5"/>
      <circle cx="0" cy="0" r="20" fill="none" stroke="white" stroke-width="2" opacity="0.4">
        <animate attributeName="r" values="20;35;20" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.4;0.1;0.4" dur="2s" repeatCount="indefinite"/>
      </circle>
      <circle cx="0" cy="0" r="35" fill="none" stroke="white" stroke-width="1" opacity="0.2">
        <animate attributeName="r" values="35;50;35" dur="2s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.2;0.05;0.2" dur="2s" repeatCount="indefinite"/>
      </circle>
    </g>
    
    <!-- Data visualization -->
    <g transform="translate(200, 300)">
      <!-- Chart bars -->
      <rect x="0" y="60" width="15" height="40" fill="white" opacity="0.4"/>
      <rect x="20" y="40" width="15" height="60" fill="white" opacity="0.5"/>
      <rect x="40" y="20" width="15" height="80" fill="white" opacity="0.6"/>
      <rect x="60" y="50" width="15" height="50" fill="white" opacity="0.4"/>
      <rect x="80" y="10" width="15" height="90" fill="white" opacity="0.7"/>
      
      <!-- Growth arrow -->
      <path d="M100 50 L130 20" stroke="#F59E0B" stroke-width="3" opacity="0.8"/>
      <path d="M125 15 L130 20 L125 25" stroke="#F59E0B" stroke-width="3" fill="none" opacity="0.8"/>
    </g>
    
    <!-- Network connections -->
    <g opacity="0.3">
      <circle cx="300" cy="200" r="4" fill="white"/>
      <circle cx="600" cy="300" r="4" fill="white"/>
      <circle cx="900" cy="250" r="4" fill="white"/>
      <circle cx="1200" cy="400" r="4" fill="white"/>
      
      <path d="M300 200 L600 300" stroke="white" stroke-width="1" opacity="0.4"/>
      <path d="M600 300 L900 250" stroke="white" stroke-width="1" opacity="0.4"/>
      <path d="M900 250 L1200 400" stroke="white" stroke-width="1" opacity="0.4"/>
    </g>
  </g>
  
  <!-- Overlay for text readability -->
  <rect x="0" y="0" width="1000" height="1080" fill="url(#bg3)" opacity="0.1"/>
</svg>